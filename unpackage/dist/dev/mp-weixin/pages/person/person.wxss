
.l-red {
    margin: 0;
    padding-top: 10px;
    background:  #d18482;
    text-align: center;
}
.l-blue::after {
    border: none;
}
.user-pic {
    border-radius: 50%;
    border: solid 5px #f4b4bb;
    box-shadow: 0 0 0 5px #efcdcf;
	background-repeat: no-repeat;
	width: 150rpx;
	height: 150rpx;
}
.user-name {
    width: 360rpx;
    margin-top: 20rpx;
    font-size: 36rpx;
    color: #fff;
    margin: 0 auto;
    overflow: hidden;
    text-overflow: ellipsis;
    white-space: nowrap;
}
.bk-bottom {
    display: block;
    width: 100%;
    height: 40rpx;
}
.c-row {
    height: 180rpx;
    box-sizing: border-box;
    padding: 0 0 0 30rpx;
}
.c-bottom {
    border-bottom: solid 1px #f5f5f5;
}
.c-cxsc,.c-pybxc {
    width: 50%;
    display: inline-block;
    text-align: left;
    vertical-align: middle;
}
.c-cxsc .cxsc-img {
    width: 80rpx;
    height: 80rpx;
}
.c-cxsc .cxsc-txt,.c-pybxc .bxc-txt {
    display: inline-block;
    margin: 44rpx 30rpx;
    font-size: 32rpx;
    color: #333;
}
.txt-gray {
    font-size: 24rpx;
    color: #999;
    margin-top: 10rpx;
}
.c-pybxc .bxc-img {
    width: 80rpx;
    height: 80rpx;
}
.f {
    padding: 0 0 0 30rpx;
}
.f .f-row {
    display: flex;
    align-items: center;
    border-bottom: solid 1px #f5f5f5;
    padding: 34rpx 30rpx 34rpx 0;
}
.f-img {
    width: 32rpx;
    height: 32rpx;
}
.f-txt {
    flex: 1;
    font-size: 32rpx;
    color: #666;
}
.f-txt {
    margin-left: 30rpx;
}
.b {
    position: fixed;
    width: 100%;
    bottom: 0;
    text-align: center;
    padding: 0 0 0 30rpx;
    box-sizing: border-box;
    font-size: 34rpx;
    height: 100rpx;
    line-height: 100rpx;
    color: #5f93ff;
}

